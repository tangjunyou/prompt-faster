#!/usr/bin/env bash
set -euo pipefail

# Auto-stage validation reports so they are always tracked once generated.
# This keeps "report appears -> git tracks it" without relying on manual `git add`.

shopt -s nullglob
report_files=(docs/implementation-artifacts/validation-report-*.md)

if ((${#report_files[@]})); then
  git add -- "${report_files[@]}" >/dev/null 2>&1 || true
fi

